<% if user_signed_in? %>

  <% content_for :title, "Friends" %>

    <div class="card">
      <div class="card-header bg-dark-subtle">
        <h1>Friends</h1>
      </div>

      <div class="card-body bg-secondary-subtle">
        <div id="friends">

          <table class="table table-striped table-bordered table-hover text-center">

          <thead class="thead-dark">
            <tr>
              <th>Name</th>
              <%# <th>Last name</th> %>
              <th>Email</th>
              <th>Phone</th>
              <th>Twitter</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @friends.each do |friend| %>
              <% if friend.user == current_user %>
              <tr><%= render friend %>
                <td>
                  <%= link_to "Show this friend", friend, class:"btn btn-secondary" %>
                </td>
              </tr> 
              <% end %>
            <% end %>
          </tbody>

          </table>

          <%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>
        </div>

      </div>
    </div>

<% else %>

  <h1> Hello world!</h1>
  <p> This is the home page. Cheers on Rails!!</p>

  <h1>Home#index</h1>
  <h1>Hello World</h1>
  <p>Find me in app/views/friends/index.html.erb</p>

<% end %>

